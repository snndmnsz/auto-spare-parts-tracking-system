<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/stock.css"/>
<link rel="stylesheet" href="/css/message.css"/>
</head>
<body>
  <%- include('includes/header.ejs') %>

    <div class="container">
        <form class="message-form" action="/messages" method="POST">
            <div class="customer-order">
                <div class="custom-select">
                  <label for="">Message Type:</label>
                  <select id="MessageType" name="MessageType">      
                    <option value="Announcement" id="Announcement" name="Medium">Announcement</option>
                    <option value="System" id="System" name="Low">System</option>
                  </select>
                </div>
            </div>
            <p class="description">
              <label for="">Message:</label>
              <textarea type="text" name="Message" id="Message" maxlength="100"></textarea>
            </p>
            <button type="submit" ><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-send"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>Publish</button>
        </form>

        <div class="table">
          <div class="table-header">
            <div class="header__item">
              <a id="ManagerID" class="filter__link filter__link--number" href="#"
                >Manager ID</a
              >
            </div>
            <div class="header__item">
              <a id="MessageType" class="filter__link filter__link--number" href="#"
                >Message Type</a
              >
            </div>
            <div class="header__item">
              <a id="Date" class="filter__link filter__link--number" href="#"
                >Date</a
              >
            </div>
            <div class="header__item">
              <a id="Message" class="filter__link filter__link--number" href="#"
                >Message</a
              >
            </div>
            <div class="header__item">
              <a id="Delete" class="filter__link filter__link--number" href="#"
                >Delete</a
              >
            </div>
          </div>
          <div class="table-content">
            <% for (let mss of messages) { %>
              <div class="table-row">
                  <div class="table-data"><%= mss.ManagerID %></div>
                  <div class="table-data"><%= mss.MessageType %></div>
                  <div class="table-data"><%= new Date(mss.Date).toLocaleDateString('pt-PT') %></div>
                  <div class="table-data"><%= mss.Message %></div>
                  <div class="table-data delete-data">
                    <form action="/message/delete" method="post">
                        <input type="hidden" value="<%= mss.MessageID  %>" name="MessageID" id="MessageID">
                        <button type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></button>
                    </form>
                    </div>
                </div>
          <% } %>





          </div>
      </div>

      

<%- include('includes/end.ejs') %>