<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/createOrder.css"/>
<script defer src="/js/createOrder.js"></script>
<script defer src="/js/createOrderSearch.js"></script>
</head>
<body>
  <%- include('includes/header.ejs') %>

    <div class="container">
        <form class="order-form" action="/new-order" method="post">
            <div class="customer-order">
                <p>
                    <label for="">Customer ID</label>
                    <input type="text" name="CustomerID" required="required" id="CustomerID">
                </p>
                <p class="order-id-container">
                    Order ID: <span  class="order-id"><%= orderId  %></span>
                </p>
                <input type="hidden" name="OrderID" id="OrderID" value="<%= orderId  %>">
                <div class="custom-select">
                  <label for="">Order Priority</label>
                  <select id="OrderPriority" name="OrderPriority">
                    <option value="Low" id="Low" name="Low">Low</option>
                    <option value="Medium" id="Medium" name="Medium">Medium</option>
                    <option value="High" id="High" name="High">High</option>
                  </select>
                </div>
            </div>
            <div class="prods">
                <div class="table">
                    <div class="table-header">
                      <div class="header__item  svg">
                        <a id="PartID" class="filter__link filter__link--number" href="#"
                          ><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg></a
                        >
                      </div>
                      <div class="header__item">
                        <a id="PartID" class="filter__link filter__link--number" href="#"
                          >Part ID</a
                        >
                      </div>
                      <div class="header__item">
                        <a id="Quantity" class="filter__link filter__link--number" href="#"
                          >Quantity</a
                        >
                      </div>
                    </div>
                    <div class="table-content">
                    </div>
                </div>
                <div class="basket-add-section">
                    <p>
                        <label for="">Part ID</label>
                        <input type="text" id="productid">
                        <span id="suggestion"></span>
                    </p>
                    <p>
                        <label for="">Quantity</label>
                        <input type="number" id="quantity">
                    </p>  
                </div>   
                <div class="buttons">
                    <button type="button" class="add-basket" ><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-square"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>Add To Basket</button>
                    <button type="button" class="delete-basket" ><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-minus-square"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="8" y1="12" x2="16" y2="12"></line></svg>Delete Basket</button>
                </div> 
            </div>
            <button type="submit" class="submit-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-bag"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>Place Order</button>
        </form>

      

<%- include('includes/end.ejs') %>