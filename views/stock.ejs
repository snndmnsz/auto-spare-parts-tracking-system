<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/stock.css"/>
</head>
<body>
  <%- include('includes/header.ejs') %>

    <div class="container">
      
      <div class="table">
        <div class="table-header">
          <div class="header__item">
            <a id="PartID" class="filter__link filter__link--number" href="#"
              >Part ID</a
            >
          </div>
          <div class="header__item">
            <a id="Year" class="filter__link filter__link--number" href="#"
              >Year</a
            >
          </div>
          <div class="header__item">
            <a id="BrandID" class="filter__link filter__link--number" href="#"
              >Brand ID</a
            >
          </div>
          <div class="header__item">
            <a
              id="BarcodNumber"
              class="filter__link filter__link--number"
              href="#"
              >Barcod Number</a
            >
          </div>
          <div class="header__item">
            <a id="Price" class="filter__link filter__link--number" href="#"
              >Price</a
            >
          </div>
          <div class="header__item">
            <a
              id="buttons"
              class="filter__link filter__link--number"
              href="#"
            >Edit</a>
          </div>
          <div class="header__item">
            <a
              id="buttons"
              class="filter__link filter__link--number"
              href="#"
            >Delete</a>
          </div>
          <div class="header__item">
            <a
              id="buttons"
              class="filter__link filter__link--number"
              href="#"
            >More</a>
          </div>
        </div>
        <div class="table-content">
              <% for (let part of parts) { %>
                <div class="table-row">
                    <div class="table-data"><%= part.PartID %></div>
                    <div class="table-data"><%= part.Year %></div>
                    <div class="table-data"><%= part.BrandID %></div>
                    <div class="table-data"><%= part.BarcodNumber %></div>
                    <div class="table-data"><%= part.Price %>$</div>
                    <div class="table-data edit-data"><a href="/edit-product/<%= part.PartID %>"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></div>
                    <div class="table-data delete-data"><a><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a></div>
                    <div class="table-data info-data"><a href="/product/<%= part.PartID %>"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-info"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg></a></div>
                </div>
            <% } %>
        </div>
      </div>


<%- include('includes/end.ejs') %>